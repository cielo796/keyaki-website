---
const currentPath = Astro.url.pathname;

const navigation = [
  { name: 'HOME', href: '/' },
  { name: '事業所案内', href: '/about/' },
  {
    name: '支援サービス',
    href: '/services/',
    children: [
      { name: '特別養護老人ホーム・ショートステイ', href: '/services/nursing-home/' },
      { name: 'ユニット型', href: '/services/unit/' },
      { name: 'デイサービス', href: '/services/day-service/' },
      { name: '居宅介護支援事業所', href: '/services/care-support/' },
      { name: '給食サービス', href: '/services/meal/' },
      { name: 'リハビリ・機能訓練', href: '/services/rehabilitation/' },
    ],
  },
  { name: 'イベント・行事', href: '/events/' },
  { name: 'お問い合わせ', href: '/contact/' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="relative z-50 bg-white shadow-sm">
  <div
    class="border-b border-keyaki-100/80 bg-[#d7e5ef]"
    style="background-image: linear-gradient(to bottom, rgba(215, 229, 239, 0.75), rgba(215, 229, 239, 0.9)), url('/images/head_bg-1024x53.jpg'); background-repeat: repeat-x; background-position: center top; background-size: auto 84px;"
  >
    <div class="container-main py-4 md:py-5">
      <div class="md:hidden">
        <a href="/" class="inline-flex flex-col leading-tight">
          <span class="text-xs font-medium text-gray-800">社会福祉法人 丹波柏原福祉会</span>
          <span class="mt-1 text-[2.6rem] font-serif font-semibold tracking-wide text-[#de8b47]">柏原けやき苑</span>
        </a>
        <p class="mt-2 text-sm text-gray-700">〒669-3313 兵庫県丹波市柏原町北山289-1</p>
        <a
          href="tel:0795-73-1185"
          class="mt-2 inline-flex items-center gap-1 rounded-full bg-white/85 px-4 py-2 text-[2rem] font-bold leading-none tracking-[0.01em] text-[#1fa73d] shadow-sm"
        >
          <span class="text-base font-semibold">TEL</span>
          <span>0795-73-1185</span>
        </a>
      </div>

      <div class="hidden items-end justify-between gap-6 md:flex">
        <a href="/" class="inline-flex flex-col leading-tight">
          <span class="text-sm font-medium text-gray-800 lg:text-base">社会福祉法人 丹波柏原福祉会</span>
          <span class="mt-1 text-5xl font-serif font-semibold tracking-wide text-[#de8b47] lg:text-6xl">柏原けやき苑</span>
        </a>

        <div class="text-right">
          <p class="text-sm text-gray-700 lg:text-base">〒669-3313 兵庫県丹波市柏原町北山289-1</p>
          <a
            href="tel:0795-73-1185"
            class="mt-2 inline-block text-3xl font-bold leading-none tracking-[0.02em] text-[#1fa73d] lg:text-4xl xl:text-5xl"
          >
            TEL0795-73-1185
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-[#20ab33] text-white">
    <div class="container-main">
      <div class="hidden h-14 items-center justify-between lg:flex">
        <nav class="flex h-full items-center gap-1">
          {navigation.map((item) => (
            <div class="relative group h-full">
              <a
                href={item.href}
                class={`inline-flex h-full items-center px-5 text-base font-semibold transition-colors ${
                  isActive(item.href) ? 'bg-white/20' : 'hover:bg-white/15'
                }`}
              >
                {item.name}
                {item.children && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="ml-1 h-4 w-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="m6 9 6 6 6-6" />
                  </svg>
                )}
              </a>

              {item.children && (
                <div class="absolute left-0 top-full z-50 mt-0 hidden min-w-[280px] border border-gray-100 bg-white py-2 text-gray-700 shadow-lg group-hover:block">
                  {item.children.map((child) => (
                    <a href={child.href} class="block px-4 py-2 text-sm hover:bg-keyaki-50 hover:text-keyaki-700">
                      {child.name}
                    </a>
                  ))}
                </div>
              )}
            </div>
          ))}
        </nav>

        <a href="/contact/" class="rounded-full p-2 transition-colors hover:bg-white/15" aria-label="お問い合わせ">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="7" />
            <path d="m21 21-4.3-4.3" />
          </svg>
        </a>
      </div>

      <div class="flex items-center justify-between py-2.5 lg:hidden">
        <div class="flex items-center gap-2">
          <a href="tel:0795-73-1185" class="inline-flex items-center rounded-full bg-white/15 px-3 py-1.5 text-xs font-semibold">
            電話する
          </a>
          <a href="/contact/" class="inline-flex items-center rounded-full bg-white/15 px-3 py-1.5 text-xs font-semibold">
            問い合わせ
          </a>
        </div>
        <button
          type="button"
          id="mobile-menu-button"
          class="inline-flex items-center gap-2 rounded-md px-2.5 py-2 transition-colors hover:bg-white/15"
          aria-label="メニューを開く"
          aria-expanded="false"
        >
          <span class="text-xs font-semibold tracking-[0.2em]">MENU</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" id="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="4" x2="20" y1="6" y2="6" />
            <line x1="4" x2="20" y1="12" y2="12" />
            <line x1="4" x2="20" y1="18" y2="18" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="hidden h-6 w-6" id="close-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 6 6 18" />
            <path d="m6 6 12 12" />
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden border-t border-white/20 bg-[#20ab33] lg:hidden">
      <nav class="container-main py-2">
        {navigation.map((item) => (
          <div class="border-b border-white/15 last:border-b-0">
            <a
              href={item.href}
              class={`block px-2 py-3 text-[15px] font-semibold transition-colors ${isActive(item.href) ? 'text-white' : 'text-white/90 hover:text-white'}`}
            >
              {item.name}
            </a>
            {item.children && (
              <div class="mb-2 ml-2 border-l border-white/20 pb-2 pl-4">
                {item.children.map((child) => (
                  <a href={child.href} class="block px-2 py-2 text-sm text-white/90 hover:text-white">
                    {child.name}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuButton?.addEventListener('click', () => {
    const willOpen = mobileMenu?.classList.contains('hidden') ?? true;
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    menuButton.setAttribute('aria-expanded', willOpen ? 'true' : 'false');
  });
</script>
